<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_url("cinema.webp")%>);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Classic.</p>
  </div>
</div>
<div class="list-title">
  <h4>My Lists</h4>
  <%= link_to "Create a movie list", new_list_path %>
</div>
<ul class="movie-card-container">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="movie-card" style="background-image: url('<%= cl_image_path list.photo.key, width: 500, height: 300, crop: :fill %>')">
    <% else %>
      <div class="movie-card">
    <% end %>
        <%= link_to list.name, list_path(list) %>
        <%= link_to "Delete List", list, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "button delete"%>
      </div>
  <% end %>
</ul>
